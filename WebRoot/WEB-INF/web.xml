<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>WebRoot</display-name>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>java2zyb1.root</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/config/spring/applicationContext-*.xml
		</param-value>
	</context-param>
	
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>SQLInjectionFilter</filter-name>
		<filter-class>com.wkmk.util.filter.SQLInjectionFilter</filter-class>
	</filter>
	 <!-- 
	<filter>
    	<filter-name>XssSqlInjectFilter</filter-name>
    	<filter-class>com.util.filter.XssSqlInjectFilter</filter-class>
  	</filter>
  	 -->
	<filter>
		<filter-name>SessionFilter</filter-name>
		<filter-class>com.wkmk.util.filter.SessionFilter</filter-class>
	</filter>
	<filter>
    	<filter-name>IndexFilter</filter-name>
    	<filter-class>com.wkmk.util.filter.IndexFilter</filter-class>
  	</filter>
  	<filter>
    	<filter-name>JspFilter</filter-name>
    	<filter-class>com.wkmk.util.filter.JspFilter</filter-class>
  	</filter>
  	<filter>
	    <filter-name>UrlRewriteFilter</filter-name>
	    <filter-class>org.tuckey.web.filters.urlrewrite.UrlRewriteFilter</filter-class>
	    <init-param>
	      <param-name>logLevel</param-name>
	      <param-value>WARN</param-value>
	    </init-param>
	</filter>
  	
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SQLInjectionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	 <!-- 
	<filter-mapping>
    	<filter-name>XssSqlInjectFilter</filter-name>
     	<url-pattern>/*</url-pattern>
  	</filter-mapping>
  	 -->
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>SessionFilter</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
  	<filter-mapping>
     	<filter-name>IndexFilter</filter-name>
     	<url-pattern>*.bo</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
     	<filter-name>IndexFilter</filter-name>
     	<url-pattern>*.app</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
     	<filter-name>IndexFilter</filter-name>
     	<url-pattern>*.htm</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
     	<filter-name>JspFilter</filter-name>
     	<url-pattern>*.jsp</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
      	<filter-name>UrlRewriteFilter</filter-name>
      	<url-pattern>*.htm</url-pattern>
  	</filter-mapping>

	<listener>
		<listener-class>
			org.springframework.web.util.Log4jConfigListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			org.springframework.web.util.IntrospectorCleanupListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			com.wkmk.util.listener.SystemListener
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			com.wkmk.util.listener.ConvertNotifyListener
		</listener-class>
	</listener>
	
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>
			org.apache.struts.action.ActionServlet
		</servlet-class>
		<init-param>
			<param-name>config</param-name>
			<param-value>
				/WEB-INF/classes/config/struts/struts-config-sys.xml,
				/WEB-INF/classes/config/struts/struts-config-vwh.xml,
				/WEB-INF/classes/config/struts/struts-config-edu.xml,
				/WEB-INF/classes/config/struts/struts-config-tk.xml,
				/WEB-INF/classes/config/struts/struts-config-app.xml,
				/WEB-INF/classes/config/struts/struts-config-zx.xml,
				/WEB-INF/classes/config/struts/struts-config-cms.xml,
				/WEB-INF/classes/config/struts/struts-config-skin.xml
			</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>application</param-name>
			<param-value>
				classpath:ApplicationResources
			</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
        <servlet-name>DisplayChart</servlet-name>
    	<servlet-class>org.jfree.chart.servlet.DisplayChart</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>DisplayChart</servlet-name>
        <url-pattern>/servlet/DisplayChart</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.bo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.app</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
        <servlet-name>xfire</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>xfire</servlet-name>
        <url-pattern>/service/*</url-pattern>
    </servlet-mapping>

	<jsp-config>
		<jsp-property-group>
			<description>html-encoding</description>
			<display-name>JSPConfiguration</display-name>
			<url-pattern>*.html</url-pattern>
			<el-ignored>true</el-ignored>
			<page-encoding>utf-8</page-encoding>
			<scripting-invalid>false</scripting-invalid>
			<include-prelude></include-prelude>
			<include-coda></include-coda>
		</jsp-property-group>
	</jsp-config>
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<error-page>
    	<error-code>500</error-code>
    	<location>/500.html</location>
  	</error-page>
  	<error-page>
    	<error-code>404</error-code>
    	<location>/404.html</location>
  	</error-page>
</web-app>